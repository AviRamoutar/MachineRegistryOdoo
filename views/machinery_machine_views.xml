<odoo>
    <!-- Kanban view -->
    <record id="view_machine_kanban" model="ir.ui.view">
        <field name="name">machinery.machine.kanban</field>
        <field name="model">machinery.machine</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="status"/>
                <field name="next_maintenance_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_details">
                                <strong><field name="name"/></strong>
                                <div>Serial: <field name="serial_number"/></div>
                                <div>Status: <field name="status"/></div>
                                <div>Next Maintenance: <field name="next_maintenance_date"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_machine_tree" model="ir.ui.view">
        <field name="name">machinery.machine.tree</field>
        <field name="model">machinery.machine</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="status"/>
                <field name="next_maintenance_date"/>
            </tree>
        </field>
    </record>

    <!-- Form view -->
    <record id="view_machine_form" model="ir.ui.view">
        <field name="name">machinery.machine.form</field>
        <field name="model">machinery.machine</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="status"/>
                        <field name="next_maintenance_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open in Kanban by default -->
    <record id="action_machinery_machine" model="ir.actions.act_window">
        <field name="name">Machines</field>
        <field name="res_model">machinery.machine</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first machine to start tracking maintenance schedules.
            </p>
        </field>
    </record>

    <!-- Menu item -->
    <menuitem id="menu_machinery_root" name="Machinery" sequence="10"/>
    <menuitem id="menu_machinery_machines" name="Machines" parent="menu_machinery_root" action="action_machinery_machine"/>
</odoo>
